# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

# Map static resources from the /public folder to the /assets URL path

GET     /assets/*file      controllers.Assets.at(path="/public", file)
GET     /webjars/*file     controllers.WebJarAssets.at(file)

#user
GET     /listing            controllers.SWTUserController.listAllUsers()
GET     /register           controllers.SWTUserController.registerForm()
POST    /register           controllers.SWTUserController.register()
GET     /login              controllers.SWTUserController.loginForm()
POST    /login              controllers.SWTUserController.login()
GET     /logout             controllers.SWTUserController.logout()
GET     /profile            controllers.SWTUserController.profile()
GET    /watplace/:id           controllers.Watplaces.watPlace(id: String)
POST    /rate               controllers.Watplaces.rate
GET     /ratings            controllers.Ratings.listAll
GET     /test/:id                controllers.Watplaces.test(id: String)
GET     /                   controllers.Public.landing()

#year
GET     /addYears           controllers.SWTYearController.addSWTYearsForm()
POST    /saveYear          controllers.SWTYearController.saveSWTYear()
POST    /deleteYear          controllers.SWTYearController.deleteSWTYear()

#place
GET     /search             controllers.SWTPlaceController.searchBox()
GET     /places           controllers.SWTPlaceController.places(ids: String)


